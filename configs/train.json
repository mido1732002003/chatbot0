{
  "data": {
    "train_path": "data/train.jsonl",
    "val_path": "data/val.jsonl",
    "tokenizer_path": "configs/tokenizer.json",
    "max_seq_len": 256,
    "batch_size": 4,
    "shuffle": true,
    "num_workers": 0,
    "include_loss_mask": true
  },
  "optimization": {
    "learning_rate": 1e-4,
    "weight_decay": 0.01,
    "warmup_steps": 100,
    "max_steps": 7500,
    "gradient_clip": 1.0,
    "gradient_accumulation_steps": 1,
    "use_amp": false
  },
  "scheduling": {
    "eval_interval": 50,
    "save_interval": 100,
    "log_interval": 10
  },
  "checkpoint": {
    "checkpoint_dir": "checkpoints/sft",
    "resume_from": null
  },
  "seed": 42
}